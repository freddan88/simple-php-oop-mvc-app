# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = false
indent_size = 2

# 4 space indentation for php-files
[*.php]
indent_size = 4

# 2 space override
[*.view.php]
indent_size = 2

[*.part.php]
indent_size = 2